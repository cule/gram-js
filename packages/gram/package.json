{
  "name": "@gram-data/gram",
  "version": "0.4.0-alpha.0",
  "author": "Andreas Kollegger",
  "main": "dist/index.js",
  "module": "dist/gram.esm.js",
  "browser": "dist/gram.umd.production.min.js",
  "unpkg": "dist/gram.umd.production.min.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format umd,esm,cjs --tsconfig tsconfig.build.json",
    "test": "tsdx test",
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint --fix src test",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/gram.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/gram.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "husky": "^4.3.6",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@gram-data/gram-ast": "^0.4.0-alpha.0",
    "@gram-data/gram-builder": "^0.4.0-alpha.0",
    "@gram-data/gram-identity": "^0.4.0-alpha.0",
    "@gram-data/gram-ops": "^0.4.0-alpha.0",
    "@gram-data/gram-parse": "^0.4.0-alpha.0",
    "@gram-data/gram-stringify": "^0.4.0-alpha.0",
    "@gram-data/gram-value": "^0.4.0-alpha.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
