{
  "name": "gram-js",
  "private": true,
  "scripts": {
    "clean": "run-s clean:lerna clean:dist",
    "clean:lerna": "lerna clean -y",
    "clean:dist": "shx rm -rf packages/*/dist",
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "build": "run-s build:**",
    "build:packages": "lerna run build",
    "build:demo": "npm run build --prefix demo",
    "test": "lerna run test --concurrency 1",
    "prepare": "run-s clean build",
    "docs": "run-s docs:**",
    "docs:api": "typedoc",
    "docs:railroad": "lerna run railroad --scope @gram-data/gram-parse && node ./scripts/railroad-guide.js",
    "docs:scripts": "npx shx cp './packages/*/dist/*.umd.development.js' docs/assets/scripts",
    "bump:dev": "lerna version --force-publish prerelease"
  },
  "devDependencies": {
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@typescript-eslint/parser": "^4.9.1",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "fast-check": "^2.8.0",
    "fp-ts-laws": "^0.3.0",
    "lerna": "^3.22.1",
    "lerna-update-wizard": "^0.17.8",
    "npm-run-all": "^4.1.5",
    "parse5": "^6.0.1",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "typedoc": "^0.19.2",
    "typedoc-neo-theme": "^1.0.10",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "fp-ts": "^2.9.1",
    "power-radix": "^2.5.6"
  }
}
